/* **********************************include sec start******************************************** */
#include <stdio.h>
#include <stdlib.h>
#include <math.h>
/* **********************************include sec end******************************************** */


int main()
{
    int num1,num2,Perimeter;
    printf("Enter length:  \n");
    scanf("%d", &num1);
    printf("Enter width: ");
    scanf("%d",&num2);
    Perimeter=(num1+num2)*2;
    printf("Perimeter of rectangle = %d\n",Perimeter);
    printf("Units");
    return 0;
}

