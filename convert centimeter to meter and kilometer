/* **********************************include sec start******************************************** */
#include <stdio.h>
#include <stdlib.h>
#include <math.h>
/* **********************************include sec end******************************************** */


int main()
{
    float num1,cint,kilo;
    printf("Enter length in centimeter =  \n");
    scanf("%f", &num1);
    cint=(num1/100.0);
    kilo=num1/100000.0;
    printf("Length in meter = %f ",cint);
    printf("m \n");
    printf("Length in kilometer = %f ",kilo);
    printf("m \n");
    return 0;
}

